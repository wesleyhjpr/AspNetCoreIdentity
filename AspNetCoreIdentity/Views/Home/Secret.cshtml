@using AspNetCoreIdentity.Extensions
@{
    ViewData["Title"] = "Segredo!";
}
<h1>@ViewData["Title"]</h1>

<p>Segredo!.</p>

@{ 
    if (this.IfClaim("Produtos", "Adicionar"))
    {
    <p>Você só vera se tiver a permissão de adicionar</p>
    }
}

<div>@Html.ActionLink("Secret","Secret").IfClaimShow(Context, "Produtos", "Adicionar")</div>
<div>
    <br />
    <a href="#" class="btn btn-danger @Html.Raw(this.IfClaimShow("Produtos", "Adicionara"))">Excluir</a>
</div>